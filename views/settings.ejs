<% include layout-header %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <h2 class="header">Settings</h2>
    <div class="row">
    <form id="settingsForm" method="POST" action="/settings" class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="What's in a name?" id="fullName" name="fullName" value="<%=user.fullName%>" type="text" class="validate">
          <label for="fullName">Full Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="City" id="city" name="city" type="text" value="<%=user.city%>" class="validate">
          <label for="city">City</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="State" id="state" name="state" type="text" value="<%=user.state%>" class="validate">
          <label for="state">State</label>
        </div>
      </div>
      <div class="row center">
        <a onclick="document.getElementById('settingsForm').submit();" id="submit" class="btn #b9f6ca green accent-3 waves-effect waves-green">Update</a>
      </div>
    </form>
  </div>
<% include layout-footer %>